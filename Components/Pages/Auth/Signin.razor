@page "/signin"

<PageTitle>Signin - Forms</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex justify-center">
    <MudCard Width="100%">
        <EditForm Model="@signinModel" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h5" Align="Align.Center">Signin</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudTextField Label="Email" Class="mt-3"
                              @bind-Value="signinModel.Email" For="@(() => signinModel.Email)"/>
                <MudTextField Label="Password" HelperText="Choose a strong password" Class="mt-3"
                              @bind-Value="signinModel.Password" For="@(() => signinModel.Password)" InputType="InputType.Password"/>
            </MudCardContent>
            <MudCardActions Class="d-flex justify-center">
                <MudButton Size="Size.Large" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Login</MudButton>
                <MudButton Size="Size.Large" Variant="Variant.Text" OnClick="@NavigateToSignup">Register</MudButton>
            </MudCardActions>
        </EditForm>
    </MudCard>
</MudContainer>