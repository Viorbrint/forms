@page "/signin"
@using System.Globalization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SigninResource> Loc;

<PageTitle>@Loc["Title"]</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex justify-center">
    <MudCard width="100%">
        <EditForm Model="@signinModel" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h5" Align="Align.Center">@Loc["Signin"]</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudTextField Label="@Loc["Email"]" Class="mt-3"
                              @bind-Value="signinModel.Email" For="@(() => signinModel.Email)"/>
                <MudTextField Label="@Loc["Password"]" HelperText="@Loc["PasswordHelper"]" Class="mt-3"
                              @bind-Value="signinModel.Password" For="@(() => signinModel.Password)" InputType="InputType.Password"/>
            </MudCardContent>
            <MudCardActions Class="d-flex justify-center">
                <MudButton Size="Size.Large" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">@Loc["LoginButton"]</MudButton>
                <MudButton Size="Size.Large" Variant="Variant.Text" OnClick="@NavigateToSignup">@Loc["RegisterButton"]</MudButton>
            </MudCardActions>
        </EditForm>
    </MudCard>
</MudContainer>