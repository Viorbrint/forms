<MudDialog>
    <DialogContent>
        <MudForm @bind-IsValid="IsValid">
            <MudTextField @bind-Value="UserModel.AccountName" Label="Account Name" Required="true" />
            <MudTextField @bind-Value="UserModel.FirstName" Label="First Name" Required="true" />
            <MudTextField @bind-Value="UserModel.LastName" Label="Last Name" Required="true" />
            <MudTextField @bind-Value="UserModel.Email" Label="Email" Required="true" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="SubmitToSalesforce" Disabled="@(!IsValid)">Submit</MudButton>
        <MudButton OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>
