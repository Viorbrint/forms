@using Forms.Data.Entities
@* is published *@
@* filled date *@
@* name of template *@
<MudTable 
        T="Form" 
        MultiSelection="true" 
        Items="@Forms" 
        @bind-SelectedItems="SelectedForms"
        SelectOnRowClick="false"
        OnRowClick="OnFormClick"
        Hover="true"
        >
    <ToolBarContent>
        <div class="d-flex justify-space-between align-center" style="width: 100%">
            <MudText Typo="Typo.h6">Completed forms</MudText>
            <MudToolBar WrapContent="true" Class="gap-2">
                <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="EditSelected" Disabled="@(SelectedForms.Count != 1)">Edit</MudButton>
                <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="DeleteForms" Disabled="@(!SelectedForms.Any())">Delete</MudButton>
            </MudToolBar>
        </div>
    </ToolBarContent>
<HeaderContent>
        <MudTh>Template</MudTh>
        <MudTh>Filling time</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Template">@context.Template.Title</MudTd>
        <MudTd DataLabel="Filling time">@context.CreatedAt</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager></MudTablePager>
    </PagerContent>
</MudTable>
