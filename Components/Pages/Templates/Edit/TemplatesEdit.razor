@page "/templates/edit/{templateId}"
@using Microsoft.AspNetCore.Authorization
@using Forms.Components.Shared.Loading
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<TemplatesEditResource> Loc;

@attribute [Authorize]

<PageTitle>Edit Template - Forms</PageTitle>

@if (!IsLoading)
{
    <MudContainer Gutters="false">
        <MudTabs Centered="true" >
            <MudTabPanel Text="Questions">
                <Questions TemplateId="@TemplateId"></Questions>
            </MudTabPanel>
            <MudTabPanel Text="Results">
                <Results TemplateId="@TemplateId" />
            </MudTabPanel>
            <MudTabPanel Text="Aggregation"></MudTabPanel>
            <MudTabPanel Text="Settings">
                <Settings TemplateId="@TemplateId"></Settings>
            </MudTabPanel>
        </MudTabs>
    </MudContainer>
}
else
{
    <Loading/>
}
